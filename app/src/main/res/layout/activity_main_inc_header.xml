<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtVehicleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFlightTelemetry"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:rotation="180"
            android:src="@drawable/ic_wifi_tethering_black_24dp" />

        <ImageView
            android:id="@+id/imgGroundTelemetry"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_wifi_tethering_black_24dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgPacketsUp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_unarchive_black_24px" />

    <TextView
        android:id="@+id/txtObjectLogTx"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark" />

    <ImageView
        android:id="@+id/imgPacketsGood"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_archive_black_24px" />

    <TextView
        android:id="@+id/txtObjectLogRxGood"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark" />

    <ImageView
        android:id="@+id/imgPacketsBad"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_delete_forever_black_24px" />

    <TextView
        android:id="@+id/txtObjectLogRxBad"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark" />

</LinearLayout>