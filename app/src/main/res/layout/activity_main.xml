<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDeviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtVehicleName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect" />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStartClick"
                android:text="Start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAtti"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/ATTI"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtStab"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/STAB"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtPath"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/PATH"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtPlan"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/PLAN"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtGPS"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.75"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/GPS"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtGPSSatsInView"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtSensor"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/SENSOR"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtAirspd"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/AIRSPD"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtMag"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/MAG"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtInput"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/INPUT"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtOutput"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/OUTPUT"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtI2C"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/I2C"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtTelemetry"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/TELEMETRY"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBatt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/BATT"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/TIME"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtConfig"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/CONFIG"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBoot"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/BOOT"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtMem"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/MEM"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtStack"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/STACK"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtEvent"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/EVENT"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtCPU"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/CPU"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtArmed"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="ARMED"
                    android:textAlignment="center"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtAuto"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="AUTO"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtMode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="MODE"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtManual"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="MANUAL"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVolt"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtVoltLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Volt"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtAmpere"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtAmpereLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Ampere"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtmAh"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtmAhLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="mAh"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtTimeLeft"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtTimeLeftLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Time Left"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCapacity"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onBatteryCapacityClick"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtCapacityLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onBatteryCapacityClick"
                    android:text="Capacity"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtCells"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onBatteryCellsClick"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtCellsLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onBatteryCellsClick"
                    android:text="Cells"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFlightTelemetry"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="FlightTelemetry"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />

                <TextView
                    android:id="@+id/txtGCSTelemetry"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_uninitialised"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="GCSTelemetry"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAltitude"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeClick"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtAltitudeLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeClick"
                    android:text="Altitude"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtAltitudeAccel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeAccelClick"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtAltitudeAccelLabel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeAccelClick"
                    android:text="m/s"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtModeNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/rounded_corner_left"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeClick"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtModeFlightMode"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_corner_middle"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeClick"
                    android:textAlignment="center"
                    android:textColor="@color/dark" />

                <TextView
                    android:id="@+id/txtModeAssistedControl"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_corner_right"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="onAltitudeAccelClick"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/Warning"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" />

</android.support.v4.widget.DrawerLayout>