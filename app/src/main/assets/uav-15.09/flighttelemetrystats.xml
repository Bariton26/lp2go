<xml>
    <object name="FlightTelemetryStats" category="System" priority="true" settings="false" singleinstance="true">
        <description>Maintains the telemetry statistics from the OpenPilot flight computer.</description>
        
        <field name="Status" elements="1" options="Disconnected,HandshakeReq,HandshakeAck,Connected" type="enum" units=""/>
        
        <field name="TxDataRate" elements="1" type="float" units="bytes/sec"/>
        <field name="TxBytes" elements="1" type="uint32" units="bytes"/>
        <field name="TxFailures" elements="1" type="uint32" units="count"/>
        <field name="TxRetries" elements="1" type="uint32" units="count"/>
        
        <field name="RxDataRate" elements="1" type="float" units="bytes/sec"/>
        <field name="RxBytes" elements="1" type="uint32" units="bytes"/>
        <field name="RxFailures" elements="1" type="uint32" units="count"/>
        <field name="RxSyncErrors" elements="1" type="uint32" units="count"/>
        <field name="RxCrcErrors" elements="1" type="uint32" units="count"/>
        
        <access flight="readwrite" gcs="readwrite"/>
        <telemetrygcs acked="false" period="0" updatemode="manual"/>
        <telemetryflight acked="false" period="5000" updatemode="periodic"/>
        <logging period="0" updatemode="manual"/>
    </object>
</xml>
